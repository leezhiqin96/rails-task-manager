<h1>My Task</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag(:task) %>
      <%= link_to task.title, task_path(task) %>
      .
     <%= link_to "Delete",
      destroy_task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
